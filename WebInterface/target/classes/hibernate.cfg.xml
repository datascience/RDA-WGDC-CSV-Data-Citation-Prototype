<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.datasource">java:comp/env/jdbc/citationdatabase</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
        <property name="show_sql">true</property>
        <!--  drop the tables every time: create-drop -->
        <!--  use auto or update -->
        <property name="hibernate.hbm2ddl.auto">create-drop</property>

        <property name="hibernate.current_session_context_class">thread</property>
        <property name="format_sql">false</property>
        <property name="use_sql_comments">false</property>

        <property name="hibernate.jdbc.batch_size">20</property>

        <mapping class="at.stefanproell.QueryStore.Query"/>
        <mapping class="at.stefanproell.QueryStore.Filter"/>
        <mapping class="at.stefanproell.QueryStore.Sorting"/>
        <mapping class="at.stefanproell.QueryStore.TimeStampInterceptor"/>

    </session-factory>


</hibernate-configuration>
